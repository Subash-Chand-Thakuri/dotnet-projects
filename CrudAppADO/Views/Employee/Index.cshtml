@model List<CrudAppADO.Models.Employee>

<h2>Employee List</h2>
<a href="/Employee/Create" class="btn btn-primary">Add Employee</a>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Age</th><th>Department</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.Department</td>
                <td>
                    <a href="/Employee/Edit/@employee.Id" class="btn btn-warning">Edit</a>
                    <a href="/Employee/Delete/@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
